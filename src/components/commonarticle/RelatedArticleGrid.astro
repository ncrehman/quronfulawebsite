---
import type { ArticleResponse } from "@lib/pojo/responsemodel/ArticleResponse";
import { getLangPrefix } from "@lib/postmethodService";

interface Props {
    items: Array<ArticleResponse>;
    lang: string;
}

const { items, lang } = Astro.props;

const langPrefix = getLangPrefix(lang);
---

<div class="keywords-section">
    <h2 class="keywords-title">
        {
            lang === "ar"
                ? "استكشاف المواضيع ذات الصلة"
                : "Explore Related Topics"
        }
    </h2>

    <div class="keywords-grid">
        {
            items.map((item) => (
                <a
                    href={`/${langPrefix}article/${item.slug}`}
                    class="keyword-card-link"
                >
                    <article class="keyword-card">
                        <h3 class="keyword-title">{item.title}</h3>
                        <p class="keyword-desc">{item.subTitle}</p>
                    </article>
                </a>
            ))
        }
    </div>
</div>
<style>
  /* =========================================
   KEYWORDS SECTION – THEME AGNOSTIC
   Colors handled globally
========================================= */

.keyword-card-link {
  text-decoration: none;
  color: inherit;
}

.keywords-section {
  max-width: 1100px;
  margin: 0 auto;
  padding: 4rem 1.5rem;
}

.keywords-title {
  font-size: 2.4rem;
  font-weight: 700;
  text-align: center;
  margin-bottom: 3rem;
  letter-spacing: -0.02em;
}

/* GRID */
.keywords-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 24px;
}

/* CARD */
.keyword-card {
  border-radius: 18px;
  padding: 26px 28px;
  border: 1px solid;
  transition:
    transform 0.25s ease,
    box-shadow 0.25s ease,
    border-color 0.25s ease;
}

/* Hover = motion only (no color assumptions) */
.keyword-card:hover {
  transform: translateY(-6px);
}

/* TITLE */
.keyword-title {
  font-size: 1.4rem;
  font-weight: 600;
  margin-bottom: 0.75rem;
  line-height: 1.35;
}

/* DESCRIPTION */
.keyword-desc {
  font-size: 0.95rem;
  line-height: 1.6;
}

</style>
