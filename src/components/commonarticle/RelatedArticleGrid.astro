---
import type { ArticleResponse } from "@lib/pojo/responsemodel/ArticleResponse";
import { getLangPrefix } from "@lib/postmethodService";

interface Props {
    items: Array<ArticleResponse>;
    lang: string;
}

const { items, lang } = Astro.props;

const langPrefix = getLangPrefix(lang);
---
<div class="article-section">
    <h2 class="article-title">
        {
            lang === "ar"
                ? "استكشاف المواضيع ذات الصلة"
                : "Explore Related Topics"
        }
    </h2>

    <div class="related-articlegrid">
        {
            items.map((item) => (
                <a
                    href={`/${langPrefix}article/${item.slug}`}
                    class="article-card-link"
                >
                    <article class="article-card">
                        <div class="card-inner">
                            <h3 class="article-title">{item.title}</h3>
                            <p class="article-desc">{item.subTitle}</p>
                        </div>
                    </article>
                </a>
            ))
        }
    </div>
</div>
<style>
  /* =========================================
   KEYWORDS SECTION – MODERN & ATTRACTIVE REDESIGN
   Enhanced with gradients, deeper shadows, animated hover
   ========================================= */

  .article-card-link {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .article-section {
    max-width: 1200px;
    margin: 0 auto;
    padding: 5rem 1.5rem;
    background: linear-gradient(to bottom, transparent, #f8f9fa); /* Subtle section background for depth */
  }

  .article-title {
    font-size: 2.8rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 4rem;
    letter-spacing: -0.03em;
    background: linear-gradient(to right, #4f46e5, #ec4899); /* Vibrant gradient title */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* GRID */
  .related-articlegrid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: 32px;
  }

  /* CARD */
  .article-card {
    border-radius: 24px;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
    position: relative;
    background: white;
  }

  /* Gradient overlay on hover */
  .article-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(79, 70, 229, 0.15), rgba(236, 72, 153, 0.15));
    opacity: 0;
    transition: opacity 0.4s ease;
    pointer-events: none;
    border-radius: 24px;
  }

  .card-inner {
    padding: 32px;
    position: relative;
    z-index: 1;
    transition: transform 0.4s ease;
  }

  /* HOVER EFFECTS */
  .article-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
  }

  .article-card:hover::before {
    opacity: 1;
  }

  .article-card:hover .card-inner {
    transform: translateY(-4px);
  }

  /* TITLE */
  .article-title {
    font-size: 1.55rem;
    font-weight: 700;
    margin-bottom: 0.9rem;
    line-height: 1.3;
    background: linear-gradient(to right, #1f2937, #4b5563);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    transition: all 0.3s ease;
  }

  .article-card:hover .article-title {
    background: linear-gradient(to right, #4f46e5, #ec4899);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* DESCRIPTION */
  .article-desc {
    font-size: 1rem;
    line-height: 1.65;
    color: #6b7280;
    transition: color 0.3s ease;
  }

  .article-card:hover .article-desc {
    color: #374151;
  }

  /* Optional subtle animation on load */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .article-card {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  /* Stagger animation for grid items */
  .related-articlegrid > a:nth-child(1) .article-card { animation-delay: 0.1s; }
  .related-articlegrid > a:nth-child(2) .article-card { animation-delay: 0.2s; }
  .related-articlegrid > a:nth-child(3) .article-card { animation-delay: 0.3s; }
  .related-articlegrid > a:nth-child(4) .article-card { animation-delay: 0.4s; }
  /* Add more if needed */

</style>
