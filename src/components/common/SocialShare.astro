---
// Props for customization (use in your article page)
export interface Props {
    title: string;
    url?: string; // Optional: defaults to current page URL
    lang: string;
}

const { title, url = Astro.url.toString(), lang } = Astro.props;

// Encode for sharing
const encodedUrl = url;
// const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
---

<div class="social-share-container">
    <p class="share-label">
        {lang === "ar" ? "شارك المقال مع أصدقائك" : "Share this article"}
    </p>
    <div class="social-buttons" role="list">
        <!-- X (Twitter) -->
        <a
            href={`https://x.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`}
            target="_blank"
            rel="nofollow noopener noreferrer"
            aria-label="Share on X (Twitter)"
            class="social-btn twitter"
            title="Share on X (Twitter)"
            role="listitem"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
            >
                <path
                    d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"
                ></path>
            </svg>
            <span class="btn-text">X (Twitter)</span>
        </a>

        <!-- Facebook -->
        <a
            href={`https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`}
            target="_blank"
            rel="noopener noreferrer"
            aria-label="Share on Facebook"
            class="social-btn facebook"
            title="Share on Facebook"
            role="listitem"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
            >
