---
import { Image } from "astro:assets";
import { EndPointPaths } from "@lib/EndPointPaths";
import { RequestModel } from "@lib/pojo/requestmodel/RequestModel";
import { ApiResponse } from "@lib/pojo/responsemodel/ApiResponse";
import { CatResponse } from "@lib/pojo/responsemodel/CatResponse";
import { ResponseModel } from "@lib/pojo/responsemodel/ResponseModel";
import { apiCalls } from "@lib/postmethodService";
const { lang } = Astro.props;
const isArabic = lang === "ar";

// ---------------- Fetch Categories ----------------
const categoryCache = new Map<string, Array<CatResponse>>();
const categorySlugCache = new Map<string, Array<CatResponse>>();

async function getCategory(lang: string) {
    const cacheKey = `${lang}_footer_cat`;
    if (categoryCache.has(cacheKey)) return categoryCache.get(cacheKey);

    const req = new RequestModel();
    req.lang = lang;

    const response: ApiResponse = await apiCalls(
        req,
        EndPointPaths.getallcategories,
    );
    if (response.status !== 0) return [];

    const list: ResponseModel = response.data;
    categoryCache.set(cacheKey, list.respList);
    return list.respList;
}

async function getSlugList(lang: string) {
    const cacheKey = `${lang}_footer_slug`;
    if (categorySlugCache.has(cacheKey)) return categorySlugCache.get(cacheKey);

    const req = new RequestModel();
    req.lang = lang;

    const response: ApiResponse = await apiCalls(
        req,
        EndPointPaths.getallcategoriesslug,
    );
    if (response.status !== 0) return [];

    const list: ResponseModel = response.data;
    categorySlugCache.set(cacheKey, list.respList);
    return list.respList;
}

const categoryList: Array<CatResponse> = await getCategory(lang);
const slugList: Array<CatResponse> = await getSlugList(lang);

// ---------------- Translations ----------------
const t = {
    footerDesc: isArabic
        ? "مقالات موثوقة تغطي الاقتصاد، الهجرة، الصحة، الجمال، ونمط الحياة."
        : "Trusted articles covering economy, migration, health, beauty, and lifestyle.",
    quickLinks: isArabic ? "روابط سريعة" : "Quick Links",
    home: isArabic ? "الرئيسية" : "Home",
    article: isArabic ? "المقالات" : "Articles",
    quotes: isArabic ? "اقتباسات" : "Quotes",
    webstories: isArabic ? "قصص الويب" : "Web Stories",
    quizChallenge: isArabic ? "اختبارات" : "Quiz",
    tools: isArabic ? "الأدوات" : "Tools",
    books: isArabic ? "الكتب" : "Books",
    about: isArabic ? "من نحن" : "About",
    contact: isArabic ? "اتصل بنا" : "Contact",
    privacyPolicy: isArabic ? "سياسة الخصوصية" : "Privacy Policy",
    termsConditions: isArabic ? "الشروط والأحكام" : "Terms & Conditions",
    explore: isArabic ? "اكتشف الأقسام" : "Explore Categories",
    tags: isArabic ? "المواضيع" : "Topics",
    followUs: isArabic ? "تابعنا" : "Follow Us",
    siteName: isArabic ? "قرنفلة" : "Quronfula",
    rights: isArabic ? "جميع الحقوق محفوظة" : "All Rights Reserved",
};
---

