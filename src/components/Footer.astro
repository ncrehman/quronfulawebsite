        </div>

        <!-- Categories -->
        <!-- <div class="footer-section" style={isArabic ? "text-align:right" : ""}>
            <h4>{t.explore}</h4>
            <ul>
                {
                    categoryList?.map((cat) => (
                        <li>
                            <a
                                href={`${lang === "ar" ? "" : `/${lang}`}/category/${cat.slug}`}
                            >
                                {cat.title}
