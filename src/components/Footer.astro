---
import { Image } from "astro:assets";
import { EndPointPaths } from "@lib/EndPointPaths";
import { RequestModel } from "@lib/pojo/requestmodel/RequestModel";
import { ApiResponse } from "@lib/pojo/responsemodel/ApiResponse";
import { CatResponse } from "@lib/pojo/responsemodel/CatResponse";
import { ResponseModel } from "@lib/pojo/responsemodel/ResponseModel";
import { apiCalls } from "@lib/postmethodService";
import { getAppConfig } from "@lib/AppConfig";
const { lang } = Astro.props;
const apiServer = await getAppConfig();
const isSecLangField = lang === apiServer.secFieldLang;

// ---------------- Translations ----------------
const t = {
    footerDesc: isSecLangField
        ? "مقالات موثوقة تغطي الاقتصاد، الهجرة، الصحة، الجمال، ونمط الحياة."
        : "Trusted articles covering economy, migration, health, beauty, and lifestyle.",
    quickLinks: isSecLangField ? "روابط سريعة" : "Quick Links",
    home: isSecLangField ? "الرئيسية" : "Home",
    category: isSecLangField ? "التصنيفات" : "Category",
    article: isSecLangField ? "المقالات" : "Articles",
    quotes: isSecLangField ? "اقتباسات" : "Quotes",
    webstories: isSecLangField ? "قصص الويب" : "Web Stories",
    quizChallenge: isSecLangField ? "اختبارات" : "Quiz",
    tools: isSecLangField ? "الأدوات" : "Tools",
    books: isSecLangField ? "الكتب" : "Books",
    about: isSecLangField ? "من نحن" : "About",
    contact: isSecLangField ? "اتصل بنا" : "Contact",
    privacyPolicy: isSecLangField ? "سياسة الخصوصية" : "Privacy Policy",
    termsConditions: isSecLangField ? "الشروط والأحكام" : "Terms & Conditions",
    explore: isSecLangField ? "اكتشف الأقسام" : "Explore Categories",
    tags: isSecLangField ? "المواضيع" : "Topics",
    followUs: isSecLangField ? "تابعنا" : "Follow Us",
    siteName: isSecLangField ? "قرنفلة" : "Quronfula",
    rights: isSecLangField ? "جميع الحقوق محفوظة" : "All Rights Reserved",
    disclaimer: isSecLangField ? "إخلاء المسؤولية" : "Disclaimer",
    correctionPolicy: isSecLangField ? "سياسة التصحيح" : "Correction Policy",
    codeEthics: isSecLangField ? "مدونة السلوك المهني" : "Code of Ethics",
    policies: isSecLangField ? "السياسات" : "Policies",
    factchecking: isSecLangField
        ? "سياسة التحقق من المعلومات"
        : "Fact-Checking Policy",
};
---

<footer class="footer">
    <div class="footer-container">
        <!-- Logo Section -->
        <div
            class="footer-section logo-sec"
           
        >
            <a
                href={lang === apiServer.defaultLanguage ? "/" : `/${lang}`}
                class="logo"
                aria-label={lang === apiServer.secFieldLang
                    ? "العودة إلى الصفحة الرئيسية"
                    : "Quronfula home"}
            >
                <span
                    style="
      position:absolute;
      width:1px;
      height:1px;
      padding:0;
      margin:-1px;
      overflow:hidden;
      clip:rect(0,0,0,0);
      white-space:nowrap;
      border:0;
    "
                >
                    {
                        lang === apiServer.secFieldLang
                            ? "العودة إلى الصفحة الرئيسية"
                            : "Quronfula Home"
                    }
                </span>

                <Image
                    src="/footerlogo.webp"
                    alt="Quronfula logo"
                    width={245}
                    height={245}
                    loading="lazy"
                    class="footer-logo"
                />
            </a>
            <h3>{t.siteName}</h3>
            <p>{t.footerDesc}</p>
        </div>

        <!-- Quick Links -->
        <div class="footer-section" >
            <h4>{t.quickLinks}</h4>
            <ul>
                <li><a href={lang === apiServer.defaultLanguage ? "/" : `/${lang}`}>{t.home}</a></li>
                <li>
                    <a href={lang === apiServer.defaultLanguage ? "/category" : `/${lang}/category`}
                        >{t.category}</a
                    >
                </li>
                <li>
                    <a href={lang === apiServer.defaultLanguage ? "/article" : `/${lang}/article`}
                        >{t.article}</a
                    >
                </li>

                <li>
                    <a href={lang === apiServer.defaultLanguage ? "/stories" : `/${lang}/stories`}
                        >{t.webstories}</a
                    >
                </li>
                <li>
                    <a href={lang === apiServer.defaultLanguage ? "/quiz" : `/${lang}/quiz`}
                        >{t.quizChallenge}</a
                    >
                </li>

                <li>
                    <a href={lang === apiServer.defaultLanguage ? "/about" : `/${lang}/about`}
                        >{t.about}</a
                    >
                </li>
                <li>
                    <a href={lang === apiServer.defaultLanguage ? "/contact" : `/${lang}/contact`}
                        >{t.contact}</a
                    >
                </li>
                
            </ul>
        </div>
        <div class="footer-section" >
            <h4>{t.policies}</h4>
            <ul>
                
                <li>
                    <a
                        href={lang === apiServer.defaultLanguage
                            ? "/privacy-policy"
                            : `/${lang}/privacy-policy`}>{t.privacyPolicy}</a
                    >
                </li>
                <li>
                    <a
                        href={lang === apiServer.defaultLanguage
                            ? "/terms-and-conditions"
                            : `/${lang}/terms-and-conditions`}
                        >{t.termsConditions}</a
                    >
                </li>
                <li>
                    <a
                        href={lang === apiServer.defaultLanguage
                            ? "/disclaimer"
                            : `/${lang}/disclaimer`}>{t.disclaimer}</a
                    >
                </li>
                <li>
                    <a
                        href={lang === apiServer.defaultLanguage
                            ? "/correction-policy"
                            : `/${lang}/correction-policy`}
                        >{t.correctionPolicy}</a
                    >
                </li>
                <li>
                    <a
                        href={lang === apiServer.defaultLanguage
                            ? "/code-of-ethics"
                            : `/${lang}/code-of-ethics`}>{t.codeEthics}</a
                    >
                </li>
                <li>
                    <a
                        href={lang === apiServer.defaultLanguage
                            ? "/fact-checking-policy"
                            : `/${lang}/fact-checking-policy`}
                        >{t.factchecking}</a
                    >
                </li>
            </ul>
        </div>
    </div>

    <div class="copyright">
        © {new Date().getFullYear()}
        {t.siteName} - {t.rights}.
    </div>
</footer>

<style>
    .footer-logo {
        width: 100%;
        max-width: 245px;
        height: auto;
        object-fit: contain; /* keeps it inside its box */
    }
    .footer {
        background: linear-gradient(to right, #707a7f, #75868f);
        color: #fff;
        margin-top: 40px;
        padding-top: 40px;
        font-size: 0.95rem;
    }

    .footer-container {
        max-width: 1200px;
        margin: auto;
        padding: 0 20px 40px;
        display: grid;
        gap: 30px;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    }

    .footer-section h4 {
        border-bottom: 1px solid #ffffff49;
        padding-bottom: 6px;
        margin-bottom: 12px;
        font-size: 1.1rem;
        font-weight: 600;
    }

    .logo-sec img {
        width: 140px;
        height: 140px;
        object-fit: contain;
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
    }

    .footer-section ul li {
        margin: 8px 0;
    }

    .footer-section a {
        color: #fff;
        opacity: 0.9;
        text-decoration: none;
        transition: 0.2s;
    }

    .footer-section a:hover {
        opacity: 1;
        text-decoration: underline;
    }

    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .tags a {
        font-size: 0.85rem;
    }

    .social a {
        font-size: 1.3rem;
        font-weight: bold;
        margin-right: 12px;
        opacity: 0.9;
    }

    .social a:hover {
        opacity: 1;
    }

    .copyright {
        text-align: center;
        padding: 12px 0;
        border-top: 1px solid #ffffff40;
        font-size: 0.8rem;
        opacity: 0.8;
    }
</style>
