---
import type { KeywordItem } from "./keywords";

interface Props {
    items: KeywordItem[];
    lang: string;
}

const { items, lang } = Astro.props;
---
<div class="keywords-section">
    <h3 class="keywords-title">
        {lang === "ar" ? "استكشف المواضيع الرئيسية" : "Explore Key Themes"}
    </h3>

    <div class="keywords-grid">
        {items.map((item, index) => (
            <article class="keyword-card" style={`--delay: ${index * 0.1}s`}>
                <div class="card-gradient"></div>
                <div class="card-inner">
                    <strong class="keyword-title">{item.title}</strong>
                    <p class="keyword-desc">{item.description}</p>
                    <div class="card-arrow">
                        <svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M5 12h14M13 5l6 7-6 7"/>
                        </svg>
                    </div>
                </div>
            </article>
        ))}
    </div>
</div>

<style>
    /* =========================================
       KEYWORDS SECTION – PREMIUM MODERN CARDS
       Inspired by top glassmorphism & gradient designs
    ========================================= */

    .keywords-section {
        max-width: 1300px;
        margin: 0 auto;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 50%, #fde8e8 100%);
        position: relative;
        overflow: hidden;
    }

    .keywords-title {
        font-size: 3.2rem;
        font-weight: 900;
        text-align: center;
        margin-bottom: 5rem;
        background: linear-gradient(90deg, #4f46e5, #c084fc, #f43f5e);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        letter-spacing: -0.04em;
    }

    /* GRID */
    .keywords-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(360px, 1fr));
        gap: 2.5rem;
    }

    /* CARD BASE */
    .keyword-card {
        position: relative;
        border-radius: 28px;
        overflow: hidden;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(16px);
        -webkit-backdrop-filter: blur(16px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        box-shadow: 
            0 10px 30px rgba(0, 0, 0, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.6);
        transition: all 0.5s cubic-bezier(0.22, 1, 0.36, 1);
        opacity: 0;
        transform: translateY(40px);
        animation: fadeUp 0.8s forwards;
        animation-delay: var(--delay, 0s);
    }

    @keyframes fadeUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Gradient overlay for vibrancy */
    .card-gradient {
        position: absolute;
        inset: 0;
        background: linear-gradient(135deg, 
            rgba(79, 70, 229, 0.15), 
            rgba(192, 132, 252, 0.1), 
            rgba(244, 63, 94, 0.15));
        opacity: 0;
        transition: opacity 0.4s ease;
        pointer-events: none;
    }

    .card-inner {
        padding: 40px 32px;
        position: relative;
        z-index: 2;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .keyword-title {
        font-size: 1.75rem;
        font-weight: 800;
        margin-bottom: 1.2rem;
        color: #1e293b;
        line-height: 1.3;
    }

    .keyword-desc {
        font-size: 1.1rem;
        line-height: 1.75;
        color: #475569;
        flex-grow: 1;
    }

    /* Arrow – elegant SVG */
    .card-arrow {
        align-self: flex-end;
        margin-top: 2rem;
        opacity: 0;
        transform: translateX(20px);
        transition: all 0.4s ease;
        color: #6366f1;
    }

    /* HOVER MAGIC */
    .keyword-card:hover {
        transform: translateY(-20px) scale(1.04);
        box-shadow: 
            0 30px 60px rgba(0, 0, 0, 0.15),
            0 0 0 1px rgba(99, 102, 241, 0.3);
    }

    .keyword-card:hover .card-gradient {
        opacity: 1;
    }

    .keyword-card:hover .card-arrow {
        opacity: 1;
        transform: translateX(0);
    }

    /* RTL Support */
    [dir="rtl"] .card-arrow {
        align-self: flex-start;
        transform: translateX(-20px);
    }

    [dir="rtl"] .keyword-card:hover .card-arrow {
        transform: translateX(0);
    }

    /* Mobile */
    @media (max-width: 768px) {
        .keywords-title { font-size: 2.6rem; }
        .keywords-grid { grid-template-columns: 1fr; gap: 2rem; }
        .card-inner { padding: 32px 24px; }
        .keyword-card:hover { transform: translateY(-12px) scale(1.02); }
    }
</style>
