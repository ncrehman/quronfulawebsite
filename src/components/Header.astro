---
import LanguageSwitcher from "@components/LanguageSwitcher.astro";
import { Image } from "astro:assets";

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith("/en") ? "en" : "ar";
const isArabic = lang === "ar";

const navItems = [
  { labelAr: "الرئيسية", labelEn: "Home", href: "/" },
  { labelAr: "مقالات", labelEn: "Articles", href: "/article" },
  { labelAr: "مسابقة معرفية", labelEn: "Quiz", href: "/quiz" },
  { labelAr: "قصص الويب", labelEn: "Web Stories", href: "/stories" },
  { labelAr: "اتصل بنا", labelEn: "Contact", href: "/contact" },
  { labelAr: "من نحن", labelEn: "About", href: "/about" },
];
---

<style>
/* ===============================
   HEADER (CLS SAFE)
================================ */

header {
  height: 72px;                 /* LOCKED HEIGHT */
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;

  position: sticky;
  top: 0;
  z-index: 1000;
  background: #f1efef;
}

/* ===============================
   LOGO (FIXED BOX)
================================ */

.logo {
  width: 88px;
  height: 88px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
}

.header-logo {
  width: 66px;
  height: 66px;
  display: block;
}

/* ===============================
   DESKTOP NAV (LOCKED)
================================ */

nav.desktop {
  height: 40px;
  display: flex;
  align-items: center;
  gap: 20px;
  white-space: nowrap;
}

nav.desktop a {
  text-decoration: none;
  color: #333;
  font-size: 15px;
  line-height: 1;
  display: inline-flex;
  align-items: center;
}

/* Language switch space reserved */
.lang-switch {
  min-width: 88px;
  text-align: center;
  background: #f4f4f4;
  padding: 6px 12px;
  border-radius: 6px;
  font-size: 14px;
  cursor: pointer;
  text-decoration: none;
  color: #333;
  white-space: nowrap;
}

/* ===============================
   HAMBURGER
================================ */

.hamburger {
  display: none;
  font-size: 28px;
  cursor: pointer;
  line-height: 1;
}

/* ===============================
   MOBILE MENU (NO CLS)
================================ */

.mobile-menu {
  position: fixed;
  top: 0;
  bottom: 0;
  width: 260px;
  background: #fff;
  box-shadow: 0 0 10px rgba(0,0,0,.15);
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 18px;
  z-index: 1001;

  transform: translateX(var(--menu-pos));
  transition: transform .3s ease;
  will-change: transform;
}

.mobile-menu a {
  text-decoration: none;
  font-size: 17px;
  color: #333;
}

.close-btn {
  font-size: 32px;
  cursor: pointer;
  line-height: 1;
}

/* ===============================
   RESPONSIVE
================================ */

@media (max-width: 768px) {
  nav.desktop {
    display: none;
  }

  .hamburger {
    display: block;
  }
}

/* ===============================
   MENU STATE
================================ */

body.menu-open .mobile-menu {
  transform: translateX(0);
}
</style>

<header dir={isArabic ? "rtl" : "ltr"}>
  <!-- LOGO -->
  <div class="logo">
    <a href={isArabic ? "/" : "/en"}>
      <Image
        src="/headerlogo.png"
        alt="Quronfula Logo"
        width={140}
        height={40}
        loading="eager"
        fetchpriority="high"
        class="header-logo"
      />
    </a>
  </div>

  <!-- DESKTOP NAV -->
  <nav class="desktop">
    {
      navItems.map((item) => (
        <a href={isArabic ? item.href : `/en${item.href}`}>
          {isArabic ? item.labelAr : item.labelEn}
        </a>
      ))
    }
    <LanguageSwitcher lang={lang} currentPath={currentPath} />
  </nav>

  <!-- HAMBURGER -->
  <div class="hamburger">☰</div>
</header>

<!-- MOBILE MENU -->
<div
  class="mobile-menu"
  style={`--menu-pos: ${isArabic ? "100%" : "-100%"};`}
>
  <span class="close-btn">×</span>

  {
    navItems.map((item) => (
      <a href={isArabic ? item.href : `/en${item.href}`}>
        {isArabic ? item.labelAr : item.labelEn}
      </a>
    ))
  }

  <LanguageSwitcher lang={lang} currentPath={currentPath} />
</div>

<script>
  const body = document.body;
  const hamburger = document.querySelector(".hamburger");
  const closeBtn = document.querySelector(".close-btn");
  const mobileMenu = document.querySelector(".mobile-menu");

  hamburger?.addEventListener("click", (e) => {
    e.stopPropagation();
    body.classList.add("menu-open");
  });

  closeBtn?.addEventListener("click", (e) => {
    e.stopPropagation();
    body.classList.remove("menu-open");
  });

  mobileMenu?.addEventListener("click", (e) => {
    e.stopPropagation();
  });

  document.addEventListener("click", () => {
    body.classList.remove("menu-open");
  });
</script>
