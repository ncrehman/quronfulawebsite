---
import CommonAuthor from "@components/commonauthor/CommonAuthor.astro";

// Props passed from getStaticPaths/getStaticProps
const currentPath = Astro.url.pathname;
const { catslug, slug } = Astro.params;
const lang = currentPath.startsWith("/en") ? "en" : "ar";
---

<CommonAuthor {slug} {catslug} {lang} />
